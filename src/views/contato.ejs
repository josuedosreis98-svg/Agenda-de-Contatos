<%- include('includes/head.ejs') %>
<%- include('includes/nav.ejs') %>

<div class="container">
  <div class="row">
    <div class="col-lg-2">

    </div>
    <div class="col-lg-8 my-3">
      <h1 class="text-center">Contato</h1>
      <p class="text-center lead">Crie ou edite o seu contato abaixo</p>
      <%- include('includes/messages') %>

      <form action="/contato/register" method="POST">
            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
            <div class="form-group">
              <label for="">Nome</label>
              <input value="<%= contato.nome %>" type="text" name="nome" class="form-control">
              <label for="">Sobrenome</label>
              <input value="<%= contato.sobrenome %>" type="text" name="sobrenome" class="form-control">
              <label for="">Email</label>
              <input value="<%= contato.email %>" type="email" name="email" class="form-control">
              <label for="">Telefone</label>
              <input value="<%= contato.telefone %>" type="tel" name="telefone" class="form-control">
            </div>
            <button type="submit" class="btn btn-primary"><% if(contato.id) { %> Editar Contato <% } else {%> Salvar Contato <%}%></button>
        </form>

      

    </div>
    <div class="col-lg-2">


    </div>
  </div>
</div>

<%- include('includes/footer.ejs') %>


